services:
  db:
    image: postgres:16
    ports:
      - "${LUCien_PG_PORT:-5433}:5432"
    environment:
      POSTGRES_USER: lucien
      POSTGRES_PASSWORD: lucien_dev
      POSTGRES_DB: lucien_dev
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U $$POSTGRES_USER -d $$POSTGRES_DB"]
      interval: 5s
      timeout: 5s
      retries: 10
      start_period: 5s
    volumes:
      - lucien_postgres_data:/var/lib/postgresql/data

volumes:
  lucien_postgres_data:
