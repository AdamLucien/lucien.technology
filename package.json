{
  "name": "lucien2026-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "playwright test",
    "test:e2e": "node scripts/test-setup.js && playwright test --reporter=list",
    "test:next": "next test",
    "analyze": "ANALYZE=true next build",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:migrate": "prisma migrate dev --name hr_module",
    "db:seed": "prisma db seed",
    "db:import": "node scripts/migrate-sqlite-to-postgres.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:seed": "node prisma/seed.js",
    "docs:diagrams": "npm run docs:diagram:cs && npm run docs:diagram:en && npm run docs:diagram:de",
    "docs:diagram:cs": "mmdc -i docs/19-visual-system-map.md -o docs/19-visual-system-map.cs.svg",
    "docs:diagram:en": "mmdc -i docs/19-visual-system-map.en.md -o docs/19-visual-system-map.en.svg",
    "docs:diagram:de": "mmdc -i docs/19-visual-system-map.de.md -o docs/19-visual-system-map.de.svg",
    "postinstall": "prisma generate"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@next/bundle-analyzer": "^16.1.1",
    "@prisma/client": "^6.7.0",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "framer-motion": "^12.26.2",
    "jszip": "^3.10.1",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "next-auth": "^4.24.13",
    "nodemailer": "^7.0.12",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "stripe": "^20.1.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/nodemailer": "^7.0.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "better-sqlite3": "^12.6.2",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "prisma": "^6.7.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
